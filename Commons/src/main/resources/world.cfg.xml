<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- DB schema will be updated if needed -->
        <property name="hbm2ddl.auto">update</property>
        <property name="current_session_context_class">thread</property>
        <mapping class="org.jmangos.realm.domain.QuestTemplate"/>
        <mapping class="org.jmangos.realm.model.base.item.ItemPrototype"/>
        <mapping class="org.jmangos.realm.model.base.PlayerLevelInfo"/>
        <mapping class="org.jmangos.realm.model.base.PlayerClassLevelInfo"/>
    </session-factory>
</hibernate-configuration>